<div class="custom-font-family bg-custom-purple min-vh-100 pt-1">
	<div class="bg-dark-light text-white h-100">
		<div class="ms-1 me-1 p-3 border-bottom border-dark">
			<%= render partial: "shared/menu"%>
		</div>
		<div class="ms-1 me-1 p-3">
			<%= form_with model: @user, url: account_path, method: :put do |form| %>

				<%= render partial: "auth/shared/form_errors", locals: { object: form.object } %>

				<div class="mt-3 form-input">
					<%= form.email_field :email, class: 'form-control text-white bg-dark', disabled: true, placeholder: 'Email' %>
				</div>

				<% if current_user.rol == 1 %>
					<div class="mt-3 form-input">
						<%= form.text_field :matricula, class: 'form-control text-white bg-dark', disabled: true, placeholder: 'MatrÃ­cula' %>
					</div>
				<% end %>

				<div class="mt-3 form-input">
					<%= form.text_field :nombre, class: 'form-control text-white bg-dark', disabled: true, placeholder: 'Nombre' %>
				</div>

				<div class="mt-3 form-input">
					<%= form.text_field :apaterno, class: 'form-control text-white bg-dark', disabled: true, placeholder: 'Apellido paterno' %>
				</div>

				<div class="mt-3 form-input">
					<%= form.text_field :amaterno, class: 'form-control text-white bg-dark', disabled: true, placeholder: 'Apellido materno' %>
				</div>

				<% if current_user.rol == 1 %>
					<div class="mt-3 form-input">
						<%= form.text_field :unconfirmed_email, class: 'form-control text-white bg-dark', placeholder: 'New email' %>
					</div>
				<% end %>

				<div class="mt-3 form-input">
					<%= form.password_field :password, class: 'form-control text-white bg-dark', placeholder: "Password (leave blank if you don't want to change it)" %>
				</div>

				<div class="mt-3 form-input">
					<%= form.password_field :password_confirmation, class: 'form-control text-white bg-dark', placeholder: 'Password confirmation' %>
				</div>

				<hr>

				<div class="mt-3 form-input">
					<%= form.password_field :current_password, class: 'form-control text-white bg-dark', required: true, placeholder: "Current Password (We need your current password to confirm the changes)"%>
				</div>

				<%= form.submit "Actualizar", class: 'btn btn-primary mt-4 signup' %>

			<% end %>
		</div>
	</div>
</div>

