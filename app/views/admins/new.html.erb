<div class="custom-font-family bg-custom-purple container-fluid min-vh-100 pt-1">
	<div class="bg-dark-light text-white vh-100">
		<div class="ms-1 me-1 p-3 border-bottom border-dark">
			<%= render partial: "shared/menu"%>
		</div>
	    <div class="ms-1 me-1 p-3">
	        <h5 class="mt-3">Crear</h5> 
	        <small class="mt-2 text-muted">
	           Nuevo Admin.
	    	</small>
	            <%= render partial: "auth/shared/flash_errors", locals: {  object: flash } %>
	
				<%= form_with model: @user, url: admin_administration_new_path do |form| %>
				<%= render partial: "auth/shared/form_errors", locals: {  object: form.object } %>
						
				<div class="mt-3 form-input col-md-4"> 
					<%= form.email_field :email, class: 'form-control form-control-focus form-no-radius form-control-sm text-white bg-dark', required: true, placeholder: 'Email' %>
				</div>

				<div class="mt-4 form-input col-md-4">
					<%= form.password_field :password, class: 'form-control form-control-focus form-no-radius form-control-sm text-white bg-dark', required: true, placeholder: 'Password' %>
				</div>

				<div class="mt-4 form-input col-md-4">
					<%= form.password_field :password_confirmation, class: 'form-control form-control-focus form-no-radius form-control-sm text-white bg-dark', required: true, placeholder: 'ConfirmaciÃ³n de password' %>
				</div>

				<%= form.submit "Enivar", class: 'btn btn-primary mt-4 signup' %>

				<% end %>
	    </div>
	</div>
</div>